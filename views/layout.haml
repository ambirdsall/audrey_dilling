    %script{:src => "js/app.js"}

    %link{:type => "text/css", :rel => "stylesheet", :href => "stylesheets/index.css"}

  %body
    .row.up-top.full-width
      .small-12.medium-4.large-6.columns.namelogo
        %h1 Audrey Dilling
      .small-12.medium-8.large-6.columns
        .nav-bar
          %ul.button-group
            %li
              %a.button.home-button{:href => "/"} Home
            %li
              %a.button.sounds-button{:href => "/sounds"} Sounds
            %li
              %a.button.contact-button{:href => "#contact"} Contact

    = yield

    .row#contact
      %hr
        .large-12.columns
          %h4 Contact Me
          .large-4.columns
            %strong> Email
            \:
            %a{:href => "mailto:audreydilling@gmail.com"}
              audreydilling at gmail dot com
          .large-4.columns
            %strong> Twitter
            \:
            %a{:href => "https://twitter.com/audreydilling"} @audreydilling
          .large-4.columns
            %strong> I Dunno
