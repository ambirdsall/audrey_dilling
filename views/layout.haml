%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/

    %title Audrey Dilling

    %script{:src => "js/bower_components/modernizr/modernizr.js"}
    %script{:src => "//ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"}
    %script{:src => "js/bower_components/fastclick/lib/fastclick.js"}
